@model LeaveManagement.Web.Views.LeaveRequestCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Request for Leave</h1>


<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-2">
                <label asp-for="DateStarted" class="control-label"></label>
                <input asp-for="DateStarted" class="form-control" />
                <span asp-validation-for="DateStarted" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="DateEnded" class="control-label"></label>
                <input asp-for="DateEnded" class="form-control" />
                <span asp-validation-for="DateEnded" class="text-danger"></span>
            </div>
            <div class="form-select m-2">
                <label asp-for="LeaveTypeId" class="control-label"></label>
                <select asp-for="LeaveTypeId" class ="form-control" asp-items="ViewBag.LeaveTypeId"></select>
            </div>
           
            <div class="form-group m-2">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            
            <div class="form-group m-2">
                <input type="submit" value="Apply" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
