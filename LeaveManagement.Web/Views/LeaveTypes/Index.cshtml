@model IEnumerable<LeaveManagement.Web.Views.LeaveTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultDays)
            </td>
          
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="delete-btn" data-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="leaveTypeId" name="Id" type="submit"/>
</form>

@section Scripts{
    <script>
    $(function(){
        $(".delete-btn").click(function(e){
            var button = $(this);
            swal({
                title: "Are you sure?",
                text: "Are you sure you want to DELETE this permanently?",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then(function(confirm){
                    if (confirm){
                        var id = button.data("id");
                        $("#leaveTypeId").val(id);
                        $("#deleteForm").submit();
                    };
                });
        });
    });
    </script>
}