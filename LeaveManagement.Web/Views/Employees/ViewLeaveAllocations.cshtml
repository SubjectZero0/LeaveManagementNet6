@using LeaveManagement.Web.Views;
@using LeaveManagement.Web.Data
@model IEnumerable<LeaveAllocationsViewModel>
@*@model IEnumerable<LeaveAllocation>*@

@{
    ViewData["Title"] = "ViewLeaveAllocations";
}

<h1>View Leave Allocations</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeaveType)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.LeaveType.DefaultDays)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.LeaveType.Name)
            </td>

                <td>
                    @Html.DisplayFor(modelItem => item.LeaveType.DefaultDays)
                </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
           
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
            </td>
        </tr>
        }
        
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>
